<Page x:Class="AlarmusClient.View.MainMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AlarmusClient.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainMenuPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Button x:Name="requestBtn" Grid.Column="0" Content="Техническая поддержка" Width="250" Height="50" Click="requestBtn_Click" Margin="10" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Button x:Name="settingsBtn" Grid.Column="0" Content="Настройки" Width="250" Height="50" Click="settingsBtn_Click" Margin="10" HorizontalAlignment="Left" VerticalAlignment="Bottom" />
        <Button x:Name="exitBtn" Grid.Column="1" Content="Выход" Width="150" Height="50" Click="exitBtn_Click" Margin="10" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
        
    </Grid>
</Page>
